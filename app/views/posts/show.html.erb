<%
=begin%>
 <p id="notice"><%= notice %></p> 
<%
=end%>

<p>
  <strong>Tittle:</strong>
  <%= @post.tittle %> |
  <%= link_to 'Back', posts_path %>
</p>

<pre>
  <strong>Body:</strong>
  <%= @post.body %>
  <% if user_signed_in? %>
    <%= link_to 'add comment', new_comment_path(:post_id => @post.id) %>
  <% end %>
</pre>

<table>
  <thead>
    <tr>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body%></td>
        <% if user_signed_in? && (current_user.id == @post.user_id || current_user.id == comment.user_id) %>
          <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>